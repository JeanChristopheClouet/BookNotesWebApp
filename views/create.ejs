<body class="text-center">
        
    
    <form class="create" action="/create" method="POST">

        <input type="hidden" id="bookId" name="bookId">
        
        <div class="form-field">
            <label for="bookTitle">Book Title:</label>
            <input type="text" id="bookTitle" name="bookTitle">
        </div>
        <div class="form-field">
            <label for="bookISBN">ISBN:</label>
            <input type="text" id="bookISBN" name="bookISBN">
        </div>
        <div class="form-field">
            <label for="bookDate">Publish Date:</label>
            <input type="date" id="bookDate" name="bookDate">
        </div>
        <div class="form-field">
            <label for="bookRating">Rating:</label>
            <input type="number" id="bookRating" name="bookRating" min="1" max="5">
        </div>
        <div class="form-field">
            <label for="bookDescription">Description:</label>
            <input type="text" id="bookDescription" name="bookDescription">
        </div>
        <div class="form-field">
            <label for="bookNotes">Notes:</label>
            <textarea id="bookNotes" name="bookNotes"></textarea>
        </div>

        <button id="done" class="edit" type="submit" >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
            </svg>
        </button>
    
    </form>


</body>

