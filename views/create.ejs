<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="text-center">

    <div class="container mt-5">
        <h2 class="mb-4">Create a New Book</h2>

        <form class="create" action="/create" method="POST">
            <!-- Hidden Book ID -->
            <input type="hidden" id="bookId" name="bookId">

            <!-- Book Title -->
            <div class="form-group mb-3">
                <label for="bookTitle" class="form-label">Book Title:</label>
                <input type="text" id="bookTitle" name="bookTitle" class="form-control" required>
            </div>

            <!-- ISBN -->
            <div class="form-group mb-3">
                <label for="bookISBN" class="form-label">ISBN:</label>
                <input type="text" id="bookISBN" name="bookISBN" class="form-control" required>
            </div>

            <!-- Publish Date -->
            <div class="form-group mb-3">
                <label for="bookDate" class="form-label">Publish Date:</label>
                <input type="date" id="bookDate" name="bookDate" class="form-control" required>
            </div>

            <!-- Rating -->
            <div class="form-group mb-3">
                <label for="bookRating" class="form-label">Rating:</label>
                <input type="number" id="bookRating" name="bookRating" class="form-control" min="1" max="5" required>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label for="bookDescription" class="form-label">Description:</label>
                <input type="text" id="bookDescription" name="bookDescription" class="form-control" required>
            </div>

            <!-- Notes -->
            <div class="form-group mb-3">
                <label for="bookNotes" class="form-label">Notes:</label>
                <textarea id="bookNotes" name="bookNotes" class="form-control" rows="4" required></textarea>
            </div>

            <!-- Submit Button -->
            <button id="done" class="btn btn-success mt-3" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                </svg>
                Submit
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

<!-- Footer -->
<%- include('partials/footer.ejs'); -%>

</html>
